<% provide(:title, "Edit") %>
<h1>Update Your Profile</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user, method: :patch) do |f| %>
			<%= render 'form', f: f%>
			<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
		<% end %>
		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails", target="_blank">change</a>
	</div>
</div>